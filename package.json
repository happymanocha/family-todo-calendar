{
  "name": "nest-family-organizer",
  "version": "1.0.0",
  "description": "Nest - Organize Your Family, Beautifully. A complete family organization app with tasks, meetings, and calendar management.",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "dev:new": "NODE_ENV=development nodemon server-new.js",
    "build": "echo 'No build step needed for static files'",
    "test": "echo 'No tests specified'",
    "test:integration": "echo 'No integration tests specified'",
    "test:e2e": "echo 'No E2E tests specified'",
    "test:regression": "echo 'No regression tests specified'",
    "test:performance": "echo 'No performance tests specified'",
    "test:uat": "echo 'No UAT tests specified'",
    "lint": "echo 'No linting configured'",
    "docs": "node -e \"console.log('ðŸ“š API Documentation: http://localhost:3000/api-docs')\"",
    "routes": "curl -s http://localhost:3000/dev/routes 2>/dev/null | jq . 2>/dev/null || echo 'Server not running or jq not installed'",
    "deploy": "./scripts/deploy-enhanced.sh dev",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:qa": "serverless deploy --stage qa",
    "deploy:staging": "serverless deploy --stage staging",
    "deploy:uat": "serverless deploy --stage uat",
    "deploy:prod": "serverless deploy --stage prod",
    "deploy:enhanced": "./scripts/deploy-enhanced.sh",
    "info": "serverless info",
    "info:dev": "serverless info --stage dev",
    "info:qa": "serverless info --stage qa",
    "info:staging": "serverless info --stage staging",
    "info:uat": "serverless info --stage uat",
    "info:prod": "serverless info --stage prod",
    "remove": "serverless remove",
    "remove:dev": "serverless remove --stage dev",
    "remove:qa": "serverless remove --stage qa",
    "remove:staging": "serverless remove --stage staging",
    "remove:uat": "serverless remove --stage uat",
    "remove:prod": "serverless remove --stage prod",
    "offline": "serverless offline",
    "logs": "serverless logs -f",
    "logs:tail": "serverless logs -f --tail",
    "aws:sync": "serverless s3sync"
  },
  "keywords": [
    "nest",
    "family",
    "organizer",
    "tasks",
    "meetings",
    "calendar",
    "beautiful",
    "nodejs",
    "express"
  ],
  "author": "hmanocha",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.451.0",
    "@aws-sdk/lib-dynamodb": "^3.451.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "serverless": "^3.35.2",
    "serverless-offline": "^13.3.0",
    "serverless-s3-sync": "^3.4.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/happymanocha/nest-family-organizer.git"
